extends /shared/layout
block content
    +pageTitle
    article.lg-pod.lg-section
        .uk-container.uk-container-center(style="padding:0 150px;")
            div(style="padding-top:99.56%; position:relative; overflow:hidden;")
                #controlledWidth.uk-width-1-1(style="position:absolute; top:0;")
                    div(id="whatisanallelebuild_hype_container" style="margin:auto; position:relative; width:906px; height:910px; overflow:hidden; transform-origin:top left;" aria-live="polite")
                        script(type="text/javascript" charset="utf-8" src="What%20is%20an%20allele%20Build.hyperesources/whatisanallelebuild_hype_generated_script.js?75234")

block append endscripts
   script.
      $(document).ready(function() {
         var container = document.getElementById('controlledWidth');
         var item = document.getElementById('whatisanallelebuild_hype_container');

         function updateItemWidth () {
            var pad = parseInt(window.getComputedStyle(container).paddingLeft);
            var newScale = (container.offsetWidth - pad) / 910;
            item.style.transform = "scale(" + newScale + "," + newScale + ")";
         };

         updateItemWidth();
         window.addEventListener('resize', updateItemWidth);
      });
